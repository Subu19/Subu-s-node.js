<body>
 
    <div class="nevi">
        <img class="logo" src="craftnepal.png"><div class="logotext"><h2>Hamro Dokan</h2></div>
          <ul>
               <li><a href="/">HOME</a></li>
               <li><a href="/products">Products</a></li>
               <li><a href="/cart">Cart</a></li>



               <li><a href="/addproduct">Add Pruduct</a></li>
               <li><a href="/adminproduct">Admin Products</a></li>

           </ul>
       </div>

    <div class="formbox">


                <form method="POST" action="<% if (editmode) { %>/editadminproduct<% }else{ %>/product <% } %>">
                    <div class="input-area">
                        <input autocomplete="off" required="" class="product-name" type="text" name="title" value="<% if (editmode) { %> <%= product.title %><% } %>">
                       <label> <h4>Product Name </h4> </label>

                    </div>
                    <br>
                    <br>
                    <br>
                    <div class="Description">
                         <textarea type="test" required="" autocomplete="off" class="desc" name="desc"><% if (editmode) { %> <%= product.desc %><% } %></textarea>
                         <label> <h4>Description </h4> </label>
                </div>
                <br> 
                <div class="Price">
                        <input required="" autocomplete="off" class="price-text" type="text" name="price" value="<% if (editmode) { %> <%= product.price %><% } %>">
                        <label> <h4>Price </h4> </label>
                        

                    </div>       
                        <br>
                        <div class="Image">

                        <input type="text" required="" class="image-text" autocomplete="off" name="image" value="<% if (editmode) { %> <%= product.image %><% } %>">
                        <label> <h4>Image </h4> </label>
                            </div>
                        <br><br><br><br>
                        <% if (editmode) { %>
                            <input type="hidden" value="<%= product.id %>" name="productId">

                        
                        <% } %>
                        <br>
                        <br>
                        <br>
                        <br>
                                <center><button type="submit">
                                    <% if (editmode) { %>Update<% }else{ %>Submit<% } %>
                                </button>
                                </center>
                            
                </form>
    </div>
  
</body>
