<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body{
            cursor: url("cursor4.png"), auto;    
            color:black;
            margin: 0px;
            margin-top:70px;
            text-decoration: none;
            background:white;
            background-attachment: fixed;
            background-size: cover;
            font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        }
       
        .nevi {

            position: fixed;
            top:0px;
            background-color:black;
            height:60px;
            width: 100%;
            z-index: 1000;
            color: white;

        }
        .nevi ul{


            float: right;
        }
        .nevi ul li{
            text-align: center;
            display: inline-block;
            margin: 5px;
            margin-right: 20px;
            
            background-color: black;
            height: 20px;
            width: 150px;
            color: white;
        }
        .nevi ul li:hover {
            transform-origin: center;
            transition: 0.2s;
            height: 50px;
            color: white;
        }
        .nevi ul li:hover a {
            transform-origin: center;
            transition: 0.2s;
            color: orange;
            cursor: url("cursor5.png"), auto; 

         
        }
        a{
            text-decoration: none;
            font-weight: bold;
            color: white;

        }
        .logo{
            border-radius: 5%;
            height:50px;
            width: 100px;
        }
        .logotext{
            position: absolute;
            left: 105px;
            top: -2px;
            color:white;
        }
        .products{
            border-style: solid;
            border-width: 2px;
            border-radius: 10px;
            width: 200px;
            height: 350px;
            margin: 20px;
            float: left;
        }
        .products:hover{
            transform: scale(1.02);
            box-shadow: 2px 4px 10px black;
            transition: 0.2s;
            
        }
        button{

            height: 30px;
            width: 70px;
            background-color: crimson;
            color: white;
            font-size: large;
            border: none;
            cursor: pointer;
            border-radius: 10px;

        }
        button:hover{
            background-color: white;
            color: black;
            transition: 0.2;
            border-style: solid;
            border-radius: 10px;
            border-width: 2px;
         }
         .order{
             
            height: 30px;
            width: 120px;
            background-color: green;
            color: white;
            font-size: large;
            border: none;
            cursor: pointer;
            border-radius: 10px;
            margin-top: 20px;
             
         }
         .order:hover{
             transition: 0.2s;
             background-color: honeydew;
             cursor: url("cursor5.png"), auto; 
         }
         .footer{
             position:absolute;
             margin-bottom: 0px;
            bottom: 0px;
             height:70px;
             width: 100%;
             background-color: black;
             color:white;
         }
    </style>
    
    <title>Cart</title>
</head>
<body>
    <div class="nevi">
        <img class="logo" src="craftnepal.png"><div class="logotext"><h2>Hamro Dokan</h2></div>
          <ul>
               <li><a href="/">HOME</a></li>
               <li><a href="/products">Products</a></li>
               <li><a href="/cart">Cart</a></li>

               <li><a href="/orders">Orders</a></li>

               <li><a href="/addproduct">Add Pruduct</a></li>
               <li><a href="/adminproduct">Admin Products</a></li>

           </ul>
       </div>
       

       <main>
           <% if (products.length > 0) { %>
                <% products.forEach(p => { %>
                    <div class="products">
                        <center>
                            <img src="<%= p.imageUrl %>" height="200px" width="200px">
                            <br><h4 style="color: green;"><%= p.title %> (<%= p.cartItems.quantity %>)</h4>
                            <br>
                            <form method="POST" action="/cart-delete">
                                <input type="hidden" value="<%= p.id %>" name="productId">
                                <input type="hidden" value="<%= p.price%>" name="price">
                                <button type="submit">Delete</button>
                            
                        </form>
                        
                        </center>
                    </div>


                <% }) %>
                <hr>
                <footer class="footer">
                <form action="/check-order" method="POST">
                   <center> <button class="order">Order Now</button> </center>   
                </form>
                </footer>
                
                
                   
               
            <% } else { %>

            <center>
            <img src="emptycart.png" height="300px" width="400px">
            <h1 style="font-weight: bold;">Looks like cart is empty.</h1>
            <h6>Feed it more!</h6>    
            
            </center>

            <% } %>

           



       </main>



</body>
</html>